{
  "_comment" : "Packer Template to create base ubuntu 16.04 AMI",
  "variables": {
    "aws_access_key": "{{env `aws_access_key`}}",
    "aws_secret_key": "{{env `aws_secret_key`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-2",
    "source_ami": "ami-0653e888ec96eab9b",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "Bluejeans-ubuntu16-04-base-{{isotime \"2006-01-02T1504\"}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
        "apt-get remove --purge landscape-common",
        "apt-get install figlet",
        "touch /etc/motd",
        "figlet \"welcome to bluejeans\" > /etc/motd"
    ]
  }]
}